{
    "openapi": "3.0.0",
    "info": {
        "title": "Solid Introduction",
        "description": "An api to demonstrate the concepts of SOLID, and validate nodejs route challenge 4",
        "version": "1.0.0"
    },
    "paths": {
        "/users": {
            "get": {
                "summary": "Get users",
                "description": "Get all users if the requester is admin",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": true,
                        "description": "ID of the user that sent the request"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {"type": "string"},
                                            "admin": {"type": "boolean"},
                                            "email": {"type": "string"},
                                            "created_at": {"type": "string"},
                                            "updated_at": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Client specified a non existing user in header.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {"type": "string"}
                                    }  
                                },
                                "example": {
                                    "error": "User Not Found!"
                                }
                            }
                        }
                    }

                }
            }
        }
    }
}